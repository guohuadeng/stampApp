<?xml version="1.0"?>
<config>    
    <sections>
        <quickview translate="label" module="quickview">
            <label>QuickView</label>
            <tab>swextensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>70</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="quickview">
                    <label>Quick View Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enableview translate="label">
                            <label>Enable Quick View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableview>
                        <dialog_width translate="label comment">
                            <label>Dialog Width</label>
                            <comment>Default value: 1000</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dialog_width>
                        <dialog_height translate="label comment">
                            <label>Dialog Max Height</label>
                            <comment>Default value: 730</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dialog_height>
                    </fields>
                </general>                
            </groups>
        </quickview>
    </sections>
</config>
