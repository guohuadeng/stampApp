<?xml version="1.0"?>
<config>
    <sections>
        <ajax_catalog translate="label" module="ajaxcatalog">
            <tab>swextensions</tab>
            <label>Ajax Catalog</label>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <price_slider_settings translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <price_slider_en translate="label comment">
                            <label>Price Slider Enable</label>
                            <comment>Use Price Slider to enable / disable the price slider.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </price_slider_en>
                        <layered translate="label comment">
                            <label>Enable AJAX for layered navigation?</label>
                            <comment>Set it to Yes for applying AJAX on layered navigation, NO will remove AJAX</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </layered>
                        <slider translate="label comment">
                            <label>Enable AJAX only for Price Slider?</label>
                            <comment>Set it to Yes for applying AJAX on layered navigation, NO will remove AJAX</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </slider>
                        <toolbar translate="label comment">
                            <label>Enable AJAX for product Toolbar?</label>
                            <comment>Set it to Yes for applying AJAX on entire toolbar , NO will remove AJAX</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </toolbar>
                        <infinitescroll translate="label comment">
                            <label>Enable Infinite Scroll?</label>
                            <comment>Set it to Yes for applying AJAX Infinite Scroll.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store> 
                        </infinitescroll>
                    </fields>
                </price_slider_settings>
                <price_slider_conf translate="label">
                    <label>Price Slider Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <timeout translate="label comment">
                            <label>Timeout</label>
                            <comment>Set this in milliseconds. It refers to the time to await for user's action on the other handle after changing the first. if the user does not change the other range within specified time, the selected settings will be applied.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </timeout>
                        <use_image translate="label comment tooltip">
                            <label>Use Image</label>
                            <comment>Setting to yes will use the images for the slider. You have to upload the images in below.</comment>
                            <tooltip>For using background colors in place of images, set this to no and specify the colours in below fields.</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </use_image>
                        <handle_image translate="label">
                            <label>Handle Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">smartwave/ajaxcatalog</upload_dir>
                            <base_url type="media" scope_info="1">smartwave/ajaxcatalog</base_url>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </handle_image>
                        <background_image translate="label">
                            <label>Background Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">smartwave/ajaxcatalog</upload_dir>
                            <base_url type="media" scope_info="1">smartwave/ajaxcatalog</base_url>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </background_image>
                        <range_image translate="label">
                            <label>Active Range Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">smartwave/ajaxcatalog</upload_dir>
                            <base_url type="media" scope_info="1">smartwave/ajaxcatalog</base_url>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </range_image>
                        <handle_color translate="label comment">
                            <label>Handle Background Color</label>
                            <comment>Background color for the handles.</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>all/adminhtml_system_config_form_field_color</frontend_model>
                            <backend_model>all/system_config_backend_design_color_validatetransparent</backend_model> 
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </handle_color>
                        <background_color translate="label comment">
                            <label>Background Color</label>
                            <comment>Background color for the inactive range.</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>all/adminhtml_system_config_form_field_color</frontend_model>
                            <backend_model>all/system_config_backend_design_color_validatetransparent</backend_model> 
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </background_color>
                        <range_color translate="label comment">
                            <label>Active Range Background Color</label>
                            <comment>Background color for the selected range.</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>all/adminhtml_system_config_form_field_color</frontend_model>
                            <backend_model>all/system_config_backend_design_color_validatetransparent</backend_model> 
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </range_color>
                        <handle_width translate="label comment">
                            <label>Handle width</label>
                            <comment>Width of the handle "px". Its the width of the image that you are using for the handle.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </handle_width>
                        <handle_height translate="label comment">
                            <label>Handle Height</label>
                            <comment>Hight of the handle in "px". Its the height of the image that you are using for the handle.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </handle_height>
                        <slider_width translate="label comment">
                            <label>Width</label>
                            <comment>Width of the slider in "px". "auto" for auto width.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </slider_width>
                        <slider_height translate="label comment">
                            <label>Height</label>
                            <comment>Height of the slider in "px".</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </slider_height>
                        <amount_style translate="label comment">
                            <label>Amount style</label>
                            <comment>This applies to the price that appears above slider.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </amount_style>
                        <textbox translate="label comment">
                            <label>Use textbox for amount?</label>
                            <comment>Set it to Yes for applying textbox for amount, NO will use the labels for amount</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </textbox>
                        <textBoxCss translate="label comment">
                            <label>Amount text-box style</label>
                            <comment>This applies to the text boxes for amount.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </textBoxCss>
                        <goBtnText translate="label comment">
                            <label>Name for your GO button .</label> 
                            <comment>This applies to the Go button for amount. By Default nameis "Go"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>141</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </goBtnText>
                        <goBtnCss translate="label comment">
                            <label>Style your GO button here.</label>
                            <comment>This applies to the Go button for amount.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>142</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </goBtnCss>
                        <onSlide translate="label comment tooltip">
                            <label>OnSlide Call Back JavaScript</label>
                            <comment>Callback Javascript when you slide the handle.</comment>
                            <tooltip>This JS will be called when you slide the handle of your slider.</tooltip>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </onSlide>
                    </fields>
                </price_slider_conf>
                <ajax_conf translate="label">
                    <label>AJAX Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <afterAjax translate="label comment tooltip">
                            <label>After Ajax Call Back JavaScript</label>
                            <comment>Callback Javascript after AJAX call for all the above entities.</comment>
                            <tooltip>This JS will be called after the ajax request is completed.</tooltip>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </afterAjax>

                        <overlay_color translate="label comment">
                            <label>Ajax Overlay color</label>
                            <comment>Color for the AJAX Overlay</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>all/adminhtml_system_config_form_field_color</frontend_model>
                            <backend_model>all/system_config_backend_design_color_validatetransparent</backend_model> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </overlay_color>
                        <overlay_opacity translate="label comment">
                            <label>Ajax Overlay opacity</label>
                            <comment>Opacity for the AJAX Overlay</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </overlay_opacity>
                        <loading_image translate="label comment">
                            <label>Loading Image</label>
                            <comment>Image to show while the results are loading</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">smartwave/ajaxcatalog</upload_dir>
                            <base_url type="media" scope_info="1">smartwave/ajaxcatalog</base_url>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </loading_image>
                        <loading_text translate="label comment">
                            <label>Results Loading Text</label>
                            <comment>Text to display when the results are loading via AJAX</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </loading_text>
                        <loading_text_color translate="label comment">
                            <label>Results Loading Text Color</label>
                            <comment>Color for text to display when the results are loading via AJAX</comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>all/adminhtml_system_config_form_field_color</frontend_model>
                            <backend_model>all/system_config_backend_design_color_validatetransparent</backend_model> 
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </loading_text_color>
                    </fields>
                </ajax_conf>
            </groups>
        </ajax_catalog>
    </sections>
</config>