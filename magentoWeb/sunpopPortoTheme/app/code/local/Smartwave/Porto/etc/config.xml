<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Smartwave_Porto>
            <version>1.6.3</version>
        </Smartwave_Porto>
    </modules>                   
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <porto after="Mage_Adminhtml">Smartwave_Porto_Adminhtml</porto>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <Smartwave_Porto>
                    <files>
                        <default>Smartwave_Porto.csv</default>
                    </files>
                </Smartwave_Porto>
            </modules>
        </translate>
		<product>
			<configurable>
				<child>
					<attributes>
						<name/>
					</attributes>
				</child>
			</configurable>
		</product>
    </frontend>
    <global>
        <blocks>
            <porto>
                <class>Smartwave_Porto_Block</class>
            </porto>
            <page>
                <rewrite>
                    <html_head>Smartwave_Porto_Block_Html_Head</html_head>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <porto>
                <class>Smartwave_Porto_Helper</class>
            </porto>
        </helpers>
        <models>
            <porto>
                <class>Smartwave_Porto_Model</class>
            </porto>
        </models>
        <resources>
            <porto_setup>
                <setup>
                    <module>Smartwave_Porto</module>
                    <class>Smartwave_Porto_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </porto_setup>
            <porto_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </porto_write>
            <porto_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </porto_read>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Smartwave_Porto>
                    <files>
                        <default>Smartwave_Porto.csv</default>
                    </files>
                </Smartwave_Porto>
            </modules>
        </translate>

        <events>                
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <porto>
                        <type>singleton</type>
                        <class>porto/observer</class>
                        <method>hookTo_controllerActionPostdispatchAdminhtmlSystemConfigSave</method>
                    </porto>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <store_edit>
                <observers>
                    <porto>
                        <type>singleton</type>
                        <class>porto/observer</class>
                        <method>hookTo_storeEdit</method>
                    </porto>
                </observers>
            </store_edit>
        </events>
        <cms>
            <browser>
                <extensions>
                    <allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                        <mp4>1</mp4>
                        <webm>1</webm>
                    </allowed>
                </extensions>
            </browser>
        </cms>
    </adminhtml>
    <default>
        <porto_design>
            <font>
                <custom>1</custom>
                <font_size>13px</font_size>
                <primary_font_family_group>google</primary_font_family_group>
                <primary_font_family_custom></primary_font_family_custom>
                <primary_font_family>Open Sans</primary_font_family>
            </font>
        </porto_design>
        <porto_settings>
            <general>
                <notice_static_block>porto_custom_block_for_notice</notice_static_block>
            </general>
            <header>
                <type>0</type>
                <language_flag>1</language_flag>
                <static_block>porto_custom_block_for_header</static_block>
                <static_block_2>porto_custom_block_for_header_type_10</static_block_2>
                <menu_title>SHOP BY CATEGORY</menu_title>
                <sticky_header>0</sticky_header>
            </header>
            <footer>
                <footer_ribbon_enabled>1</footer_ribbon_enabled>
                <footer_ribbon_text>Ribbon Text</footer_ribbon_text>
