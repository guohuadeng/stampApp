            <action method="addJs"><script>smartwave/jquery/jquery-noconflict.js</script></action>
            <action method="addItem"><type>skin_js</type><name>socialfeeds/js/twitterfetcher.js</name><params/></action>
            <action method="addItem">
                <type>skin_css</type>
                <name>socialfeeds/css/style.css</name>
