<?php if (Mage::getStoreConfig(Smartwave_Blog_Helper_Config::XML_TAGCLOUD_SIZE) && $this->getCollection()->count()): ?>
<div class="block block-blog-tags">
    <div class="block-title">
        <strong><span><?php echo Mage::helper('blog')->__('Tag Cloud'); ?></span></strong>
    </div>
    <div class="block-content">
        <ul class="tagcloud">
